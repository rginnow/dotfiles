[alias]
    ; misspellings
    pul = pull
    pus = push

    ; add
    add = add --all
    patch = add --patch

    ; branch
    del = branch --delete
    move = branch --move
    current = !git branch | grep"^*" | awk '{ print $2 }'

    ; commit
    commit = commit --message
    amend = commit --amend --no-edit

    ;checkout
    check = checkout
    newbranch = checkout -b

    ;diff
    staged = diff --staged

    ;fetch
    update = fetch

    ;flow
    f = flow
    ff = flow feature
    ffs = flow feature start
    ffc = flow feature commit
    ffp = flow feature publish

    ;log
    lg = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset'
    last = log -1 HEAD --stat
    history = log --oneline --decorate --color

    ;pull
    down = pull

    ;push
    up = push

    ;status
    stat = status --short --branch

    ;stash
    stashes = stash list
    pop = stash pop

    ;branch lists
    branches = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    branch-list-merged = "!git branch --merged develop | grep -v -E '(develop|origin|master)'"
    ;branch-delete-merged = "!git branch-list-merged | xargs git branch -d"
	branch-unpublished = "!git branch --format '%(refname:short) %(upstream)' | awk '{if (!$2) print $1;}'"

    ;undo
    unstage = reset HEAD
    undo = reset HEAD~1 --mixed

    ;upstream
    set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
[color]
    ui = auto
[commit]
    gpgsign = true
[core]
    autocrlf = input
    editor = nvim
    excludesfile = ~/.config/git/gitignore
    pager = delta
[delta]
    ; delta detects terminal colors automatically; set one of these to disable auto-detection
    ; dark = true
    ; light = true
    line-numbers = true
    minus-emph-style = "syntax #613038"
    minus-style = "syntax #3B2C37"
    navigate = true  ; use n and N to move between diff sections
    plus-emph-style = "syntax #2D4E45"
    plus-style = "syntax #2A363B"
    ; syntax-theme = Dracula
[diff]
    tool = vimdiff
    colorMoved = zebra
[fetch]
    prune = true
[gpg]
    program = gpg
[help]
    autocorrect = 10
[include]
    path = ~/.config/git/config_local
[init]
    defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[merge]
    autoStash = true
    conflictstyle = zdiff3
[pull]
    rebase = true
[push]
    default = current
[rebase]
    autoStash = true
[rerere]
    enabled = true
[url "https://github.com/"]
    insteadOf = gh:
[url "https://gist.github.com/"]
    insteadOf = gist:
[url "https://bitbucket.org/"]
    insteadOf = bb:
[url "https://gitlab.com/"]
    insteadof = gl:
[web]
    browser = brave
