[alias]
	; misspellings
	pul = pull
	pus = push

	; add
	a = add
	aa = add --all
	ap = add --patch
	au = add --update

	; branch
	b = branch
	ba = branch --all
	bd = branch --delete
	bD = branch --delete --force
	bm = branch --move
	bM = branch --move --force

	; commit
	c = commit
	ca = commit --amend
	ci = commit --interactive
	cm = commit --message
	cv = commit --verbose

	;checkout
	co = checkout
	cob = checkout -b

	;diff
	d = diff
	dc = diff --cached
	ds = diff --staged
	dw = diff --word-diff

	;flow
	f = flow
	ff = flow feature
	ffs = flow feature start
	ffc = flow feature commit
	ffp = flow feature publish

	;log
	l = log
    lg = log --graph
    lk = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset'
    lo = log --oneline
    lp = log --patch
    lt = log --topo-order
	last = log -1 HEAD --stat

	;status
	s = status --short --branch

	;branch lists
	branches = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
	branch-list-merged = "!git branch --merged develop | grep -v -E '(develop|origin|master)'"
    branch-delete-merged = "!git branch-list-merged | xargs git branch -d"

	;undo
	unstage = reset HEAD
	undo-commit = reset HEAD~1 --mixed
	set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`

	;wip
	wip = !git add --all && git commit -m 'wip'
[color]
	ui = auto
[commit]
	gpgsign = true
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	pager = delta
[diff]
	tool = vimdiff
[fetch]
	prune = true
[help]
	autocorrect = 10
[include]
    path = ~/.gitconfig_local
[push]
	default = current
[rerere]
	enabled = true
[merge]
	conflictstyle = diff3
[interactive]
	diffFilter = delta --color-only
[delta]
	line-numbers = true
	syntax-theme = Dracula
	plus-style = "syntax #2A363B"
    plus-emph-style = "syntax #2D4E45"
    minus-style = "syntax #3B2C37"
    minus-emph-style = "syntax #613038"
[pull]
	rebase = false
[init]
	defaultBranch = main
[user]
	;GPG Signing Key
	;signingkey = 