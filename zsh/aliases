# Global stuff
alias vim=nvim
alias zshconf="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias showpath="echo -e \"${PATH//:/\n}\""
alias reload="omz reload"
alias copy="pbcopy < "

# Eza (replacement for exa)
alias ll='eza -lghamUF --git --icons'
alias llt='eza -gTL 2 --git --icons'
## Sorts
alias llm='eza -lghamUF --git --icons --sort=modified'
alias lld='eza -lghamUF --git --icons --group-directories-first'

# Laravel specific shortcuts
alias a="artisan"
alias tinker="a tinker"
alias migrate="a migrate"
alias mf="migrate:fresh"
alias mfs="mf --seed"
alias test="a test"

# Composer & NPM shortcuts
#alias npm="pnpm"
alias dump="composer dump"
alias refresh="rm -rf ./vendor/ ./composer.lock && composer i"
alias reset="rm -rf ./node_modules/ ./package-lock.json && npm install"
alias dev="npm run dev"
alias prod="npm run prod"

# Git shortcuts
alias g="git"
alias gs="g s"
alias co="g checkout"
alias br="g checkout -b"
alias gl="g log --oneline --decorate --color"
alias push="git push"
alias pull="git pull"