#!/usr/bin/env bash

# Credit to ThePrimeagen
# Taken from https://github.com/jessarcher/dotfiles/blob/master/scripts/t

if [[ $# -eq 1 ]]; then
    selected=$1
else
    items=$(find ~/Code -maxdepth 1 -mindepth 1 -type d)
    items+=$(echo -e "\n/tmp")
    selected=$(echo "$items" | fzf)
fi

if [[ $selected == '' ]]; then
    exit
fi

dirname=$(basename "$selected" | sed 's/\./_/g')

if tmux switch-client -t ="$dirname"; then
    exit 0
fi

if tmux new-session -c "$selected" -d -s "$dirname"; then
    tmux switch-client -t "$dirname"
else
    tmux new -c "$selected" -A -s "$dirname"
fi
